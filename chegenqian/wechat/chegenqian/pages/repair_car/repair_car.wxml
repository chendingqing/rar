<!--pages/repair_car/repair_car.wxml-->
<view class="container">
    <view class="rpc_list">
        <a href="">
            <image src="{{repairCarImg}}"></image>
        </a>
    </view>
    <view class="rpc_det">
        <view class="rpc_det_tit">
            <h1>{{repairCartTitle}}</h1>
        </view>
        <view class="rpc_det_text">
            <text>介绍：{{repairCarText}}</text>
        </view>
        <view class="rpc_det_rest">
            <i class="ic_add">
                <image src="../images/carhome/ic_dizhi.png"></image>
            </i>
            <text>{{repairCarAddressText}}</text>
            <view class="call_phone" bindtap='callphone'>
                <image src="../images/carhome/ic_dianhua.png"></image>
            </view>
        </view>
    </view>
</view>
