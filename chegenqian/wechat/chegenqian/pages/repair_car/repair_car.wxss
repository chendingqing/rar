/* pages/repair_car/repair_car.wxss */
page{
	background-color: #f5f5f5;
}
.rpc_list{
	width: 750rpx;
}
.rpc_list a{
	display: block;
	width: 100%;
	height: 320rpx;
}
.rpc_list a image{
	width: 100%;
	height: 100%;
}
.rpc_det{
	width: 750rpx;
	padding-top: 26rpx;
	background: #fff;
}
.rpc_det_tit,.rpc_det_text,.rpc_det_rest{
	width: 710rpx;
	margin: 0 auto;
}
.rpc_det_tit h1{
	color:#444;
	font-size: 32rpx;
}
.rpc_det_text text{
	color:#888;
	font-size: 28rpx;
	line-height: 40rpx;
}
.rpc_det_rest{
	display: flex;
}
.ic_add{
	display: block;
	width: 40rpx;
	height: 40rpx;
	flex-grow:0; 
	margin-top: 46rpx;
}
.ic_add image{
	width: 100%;
	height: 100%;
}
.rpc_det_rest text{
	display: block;
	color:#999;
	font-size: 24rpx;
	flex: 6;
	line-height: 108rpx;
	padding-top: 13rpx;
}
.call_phone{
	flex-grow:0; 
	width: 81rpx;
	height: 81rpx;
	border-radius: 50%;
}
.call_phone image{
	width: 100%;
	height: 100%;
}