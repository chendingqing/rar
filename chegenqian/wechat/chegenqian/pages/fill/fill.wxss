/* pages/fill/fill.wxss */
.container{
	position: relative;
	z-index:1;
}
.fill_top,.fill_con,.fill_det,.fill_money{
	background-color: #fff;
}
.fill_top,.fill_det .fill_det_top{
	width: 100%;
	height: 80rpx;
	border-bottom: 2rpx solid #F5F5F5;
}
.fill_det_top{
	padding-top: 13rpx;
}
.fill_tit,.fill_det .fill_det_tit{
	width: 710rpx;
	height: 80rpx;
	margin: 0 auto;
}
.fill_tit span,.fill_det .fill_det_tit span{
	display: block;
	height: 100%;
	font-size: 26rpx;
	line-height: 80rpx;
	float: left;
}
.fill_pdt {
	padding-top: 13rpx;
}
.fill_con{
	height: 178rpx;
	width: 100%;
	margin: 0 auto;
	margin-bottom:20rpx; 
	display: flex;
}
.fill_picker{
	width: 100%;
	height: 100%;
}
.con_img{
	width: 122rpx;
	height: 123rpx;
	border-radius:20rpx;
	margin: 26rpx 27rpx 30rpx 20rpx; 
	flex-grow: 0;
}
.con_img image{
	width: 100%;
	height: 100%;
	border-radius:20rpx;

}
.con_name{
	width: 280rpx;
	flex: 1;
}
.con_name text{
	font-size: 34rpx;
	line-height: 178rpx;
	color: #434343;
}
.fill_det{
	width: 100%;
	height: 364rpx;
	position: relative;
	margin-bottom: 20rpx;
}
.fill_det image{
	height: 13rpx;
	width: 100%;
	position: absolute;
	top: 0;
}
.fill_text{
	height: 270rpx;
	display: flex;
	flex-direction:column;
}
.fill_text view{
	height: 90rpx;
	line-height: 90rpx;
	color: #333;
}
.fill_text input{
}
button:disabled{
	border:none;
}
.fill_text input,.fill_text .fill_picker1{
	font-size: 28rpx;
	color:#999;
}
.fill_picker{
	font-size: 30rpx;
	margin-left: 20rpx;
	float: left;
}
.car{
	display: flex;
}
.car picker{
	height: 90rpx;
	width: 136rpx;
}
.car input{
	font-size: 28rpx;
}
.car picker .car_image{
	display: inline-block;
	width: 14rpx;
	height: 24rpx;
	position: static;
	float: right;
	margin-top: 33rpx;
}
.create-title{
	display: block;
	height: 100%;
	margin: 0 auto;
	margin-left: 114rpx;
	width: 400rpx;
	float: left;
	font-size: 32rpx;
}
.yz_input{
	margin-left:20rpx;
}
.name_input{
	padding-left:84rpx;
	height: 100%;
}
.fill_text lable,.fill_money lable,.yz_btn{
	display: block;
	font-size: 30rpx;
    margin-left: 20rpx;
    float: left;
}
.site image{
	display: inline-block;
	width: 14rpx;
	height: 24rpx;
	position: static;
	float: right;
	margin-top: 33rpx;
}
.fill_picker1{
	font-size: 32rpx;
	height: 90rpx;
	width: 480rpx;
	float: left;
	margin-left: 114rpx;
}
.fill_picker1 input{
	display: block;
	height: 88rpx;
	float: left;
}
.fill_money{
	height: 88rpx;
}
.fill_money lable{
	height: 88rpx;
	line-height: 88rpx;
}
.fill_money .fill_mon_je{
	color: #999;
}
.fill_money .fill_mon_Num{
	margin-left: 114rpx;
	width: 400rpx;
	color: #EC3B3B;
	font-size: 32rpx;
}
.fill_foot_btn{
	height:98rpx;
	width: 100%;
	background:rgba(250,129,11,1);
	color:#fff;
	text-align: center;
	line-height: 98rpx;
	position: fixed;
	bottom: 0;
	border-radius: 0;
}
.yanzheng{
	display: flex;
}
.yanzheng input{
	flex: 2;
	border-right: 2rpx solid #eee;
}
.yz_btn{
  width: 215rpx;
  height: 63rpx;
  margin: auto 20rpx;
}
.yz{
	border-radius:32rpx;
	background-color: #FA810B;
	margin-top: 13rpx;
	font-size: 24rpx;
}
.fill_alert{
	width: 750rpx;
	height: 1334rpx;
	position: absolute;
	top: 0;
	left: 0;
	background-color:rgba(0,0,0,0.3);
	z-index:999;
}
.alert{
	width: 454rpx;
	height: 369rpx;
	background: #fff;
	border-radius: 10rpx;
	margin: 0 auto;
	margin-top: 436rpx;
}
.alert image{
	display: block;
	width: 100%;
	height: 108rpx;
}
.alert_text{
	width: 100%;
	height: 172rpx;
	line-height: 172rpx;
	text-align: center;
	font-size: 30rpx;
	color:#434343;
}
.alert_btn{
	width: 178rpx;
	height: 60rpx;
	text-align:center;
	line-height: 60rpx;
	background:rgba(250,129,11,1);
	border-radius:30rpx;
	color: #fff;
}
.pay_err{
	line-height: 1;
	height: 100rpx;
	width: 420rpx;
	margin: 0 19rpx;
	margin-top: 60rpx;
}
.tit_img{
	width: 60rpx;
	height: 60rpx;
	float: left;
	margin-right: 12rpx;
	margin-top: 13.5rpx;
}
.tit_img image{
	width: 100%;
	height: 100%;
	position: static;
}
.fill_money{
	background: #fff;
	margin-bottom: 120rpx;
}
.fill_money lable{
	display: block;
	font-size: 30rpx;
    margin-left: 20rpx;
    float: left;
}