/* frisend-assist.wxss */
.container{
  background: #fff;
}
.fir_banner{
	height: 300rpx;
}
.fir_banner image{
	width: 100%;
	height: 100%;
}
.fir_tit{
	width: 710rpx;
	margin: 29rpx auto;
	color:#333;
}
.fir_tit span{
	font-size: 30rpx;
}
.fir_content{
	border-top: 1rpx solid #F5F5F5;
    height: 339rpx;
}
.fir_con_top{
	width: 710rpx;
	height: 150rpx;
	margin: 0 auto;
  margin-bottom: 23rpx;
  border-bottom: 1rpx solid #F5F5F5;
}
/*微信昵称与头像需要获取授权*/
.fir_con_top image{
	height: 110rpx;
	width: 110rpx;
	margin-top: 20rpx;
	float: left;
}
/*微信昵称*/
.weChatName{
	float: left;
	margin-left: 28rpx;
	line-height: 150rpx;
	font-size: 28rpx;
}
.fir_con_jilu{
	width: 710rpx;
	height: 190rpx;
	margin: 0 auto;
	display: flex;
}
.jilu_used,.jilu_unused{
	height: 140rpx;
	flex:1;
	position: relative;
}
.jilu_used image,.jilu_unused image{
	height: 100%;
	width: 346rpx;
}
.jilu_text{
    position:absolute;
    top:0;left: 0;
    font-size: 30rpx;
    width: 346rpx;
    height: 140rpx;
    text-align: center;
    line-height: 100rpx;
}
.jilu_text span{
	display:block;
	line-height: 0;
	font-size: 20rpx;
}
.fir_con_img{
	height: 480rpx;
	border-top:2rpx solid rgba(245,245,245,1);
    background-color:#F5F5F5; 
}
.img_item{
	width: 710rpx;
	display: flex;
	margin: 0 auto;
	flex-wrap: wrap;
}
.img_item a{
	height: 90rpx;
	flex-grow: 0;
	margin-right: 11rpx;
	margin-bottom:16rpx; 
}
.img_item a image{
	width: 90rpx;
	height: 90rpx;
}
.fir_btn{
	width: 750rpx;
	display: flex;
	margin-top: 134rpx;
}
.fir_btn1,.fir_btn2{
	width:347rpx;
	height:88rpx;
	border:1rpx solid rgba(250,129,11,1);
	border-radius:10rpx;
	color:#FA810B;
}
.fir_btn1{
	margin-right: 16rpx;
	margin-left: 20rpx;
}
.fir_btn2{
	background: #FA810B;
	color: #fff;
	margin-right: 20rpx;
}
.fir_btn1 span,.fir_btn2 span{
	display: block;
	height: 100%;
	line-height: 88rpx;
	text-align: center;
}