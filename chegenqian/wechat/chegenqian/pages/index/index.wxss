  position: relative;
  margin-bottom:100rpx; 
  background:#fff;
}
swiper{
  height: 500rpx;
  width: 750rpx;
}
.banner{
  height:500rpx;
}
.banner a image{
  width: 100%;
  height: 100%;
}
